@model BookWorms.Models.Admins.AdminAddBookViewModel
@{ ViewData["Title"] = "AddBooks"; }
<form asp-action="AddBooks" method="post">

    <div class="row">
        <div class="col-2">
            Name
        </div>
        <div class="col-10">
            <input class="form-control" type="text" asp-for="Name" />
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            Description
        </div>
        <div class="col-10">
            <textarea class="form-control"
                      asp-for=" Description">
  
            </textarea>
        </div>

    
    <div class="row">
        <div class="col-10"></div>
        <div class="col-2">
            <button type="submit" class="btn btn-secondary">Save</button>
        </div>
    </div>
</form>
